
# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=audit_tracker
DB_PORT=3306

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Configuration (CRITICAL: Generate a secure random string)
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MINIMUM_32_CHARACTERS

# CORS Configuration for Production
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# AWS Configuration (for email sending and file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SES_FROM_EMAIL=noreply@yourdomain.com

# S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# Frontend API URL
VITE_API_URL=http://localhost:5000/api

# Security Settings
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=10
JWT_EXPIRY=8h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
